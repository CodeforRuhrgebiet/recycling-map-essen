#!/bin/sh

# script/setup: This build the app and then deploys it.

set -e

cd "$(dirname "$0")/.."

script/setup
script/build

echo $(pwd)
## add deployment instructions here..
rsync -avce --progress --exclude node_modules/ --exclude script/ --exclude package.json --exclude package-lock.json --exclude style.scss "ssh -o StrictHostKeyChecking=no" ./ cfruhr@brorsen.uberspace.de:/home/cfruhr/vhosts/abfallkarte.openruhr.de/

echo "==> App is deployed!"
